<% layout('layouts/boilerplate')%>
<div class='mb-5' id="cluster-map" ></div>
<div class="container">

    <% for (let resort of resorts){%>
    <div class="card border-secondary mb-3">
        <div class="row">
            <div class="col-md-4 d-flex align-items-center">
                <%if(resort.images.length) {%>
                <img class="img-fluid img-thumbnail" alt="" src="<%=resort.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
                <% } %>
            </div>
            <div class="col-md-8 d-flex align-items-center">
                <div class="card-body">
                    <h5 class="card-title"><%= resort.name %> </h5>
                    <p class="card-text"><%= resort.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= resort.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/resorts/<%=resort._id%>">View <%=resort.name%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const resorts = { features: <%- JSON.stringify(resorts) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>